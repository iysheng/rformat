""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
function! Astyle()
execute 'silent ! astyle --style=bsd %'
endfunction

map <silent> <leader>f :call Astyle()<CR>
map <silent> <leader>n :call Astyle()<CR>
